{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
            "version": "detect" 
        }
    },
    "rules": {
        "comma-dangle": "off",
        "@typescript-eslint/comma-dangle": ["error", "only-multiline"],
        "@typescript-eslint/semi": "off",
        "@typescript-eslint/member-delimiter-style": "off"
    }
}
